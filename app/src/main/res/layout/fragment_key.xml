<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/key_power"
            style="@style/KeyInTab"
            android:layout_alignParentTop="true" />


        <ImageView
            android:id="@+id/key_volume_up"
            style="@style/KeyInTab"
            android:layout_centerVertical="true" />


        <ImageView
            android:id="@+id/key_volume_down"
            style="@style/KeyInTab"
            android:layout_marginTop="10dp"
            android:layout_below="@id/key_volume_up" />

    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_menu"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_home"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_back"
                style="@style/KeyInTab" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_s"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_t"
                style="@style/KeyInTab" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_1"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_2"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_3"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_delete"
                style="@style/KeyInTab" />

            <ImageView
                style="@style/KeyInTab"
                android:layout_weight="0"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_4"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_5"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_6"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_arrow"
                style="@style/KeyInTab" />

            <ImageView
                style="@style/KeyInTab"
                android:layout_weight="0"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_7"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_8"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_9"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_sound"
                style="@style/KeyInTab" />

            <ImageView
                style="@style/KeyInTab"
                android:layout_weight="0"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/key_xin"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_0"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_jing"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_bt"
                style="@style/KeyInTab" />

            <ImageView
                android:id="@+id/key_sos"
                style="@style/KeyInTab"
                android:layout_marginRight="20dp"
                android:layout_weight="0" />
        </TableRow>
    </TableLayout>
</LinearLayout>
